            <BarItem>
                <Button Color="Color.Light" TextWeight="TextWeight.Bold" TextColor="TextColor.Black50" TextSize="TextSize.Heading3" Class="rounded-4">Login</Button>
                <Button Color="Color.Light" TextWeight="TextWeight.Bold" TextColor="TextColor.Black50" TextSize="TextSize.Heading3" Class="rounded-4">Register</Button>
